<style>
  .dataTables_wrapper .dataTables_length,
  .dataTables_wrapper .dataTables_filter {
    margin-bottom: 20px !important
  }

  table.dataTable {
    border-top: 1px solid #0d6efd;
  }
</style>

<div class="container">


  <a href="/admin/add-product"><button type="button"
      class="btn btn-info text-white  mt-5 mb-5 btn-lg">Add-Product</button></a>



  <table class="table  table-striped table-bordered border-primary" id="productsTable">
    <thead>
      <tr>
        <th scope="col">Sl</th>
        <th scope="col">Model</th>
        <th scope="col">Highlights</th>
        <th scope="col">Feautures</th>
        <th scope="col">Image</th>
        <th scope="col">Offer Price</th>
        <th scope="col">Price</th>
        <th scope="col">Discounts</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>

      </tr>
    </thead>
    <tbody>

      {{#each productz}}
      <tr>
        <th scope="row">{{this.sl}}</th>
        <td>{{this.model}}</td>
        <td>{{this.Highlights}}</td>
        <td>{{this.Feautures}}</td>
        <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
        <td>{{this.op}}</td>
        <td>{{this.p}}</td>
        <td>{{this.dis}}</td>

        <td><a href="/admin/editProduct/{{this._id}}" class="btn btn-primary">Edit</a></td>
        <td><a href="/admin/deleteProduct/{{this._id}}" class=" btn btn-danger"
            onclick="confirm('are you sure {{this.model}}')">Delete</a></td>
      </tr>

      {{/each}}

    </tbody>
  </table>
</div>
</div>



<script>
  $(document).ready(function () {
    $('#productsTable').DataTable();
  });
</script>