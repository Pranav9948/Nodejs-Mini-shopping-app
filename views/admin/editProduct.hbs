    <!-- header ends -->

    <!-- section starts -->


    <section>


        <div>

            <form action="/admin/editProduct/{{response._id}}" method="post" enctype="multipart/form-data" class="box">

                <div class="box_left" style="margin-left: 20px;">

                    <h3 style="text-align: center; padding-top: 20px; padding-bottom: 20px;">Edit product</h3>


                    <label for="sl">sl</label><br> <br>
                    <input type="text" id="sl" name="sl" style="height: 40px;width: 15%;" value="{{response.sl}}"><br> <br><br>

                    <label for="model">model</label><br> <br>
                    <input type="text" id="model" name="model" value="{{response.model}}"   style="height: 40px;width: 55%;"><br> <br><br>

                    <label for="Highlights">Highlights</label><br> <br>
                    <input type="text" id="Highlights" name="Highlights" value="{{response.Highlights}}"   style="height: 60px;width: 55%;"><br> <br><br>
                    <label for="Feautures">Feautures</label><br><br>
                    <input type="text" id="Feautures" name="Feautures"  value="{{response.Feautures}}"    style="height: 100px;width: 55%;"><br> <br><br>
                    <label for="phones">Select Category</label><br><br>



                    <label for="op">offerprice</label><br><br>
                    <input type="text" id="op" name="op" value="{{response.op}}"  style="height: 40px;width: 20%;"><br><br>
                    <label for="p">price</label><br><br>
                    <input type="text" id="p" name="p" value="{{response.p}}"  style="height: 40px;width: 20%;"><br><br>
                    <label for="dis">discounts</label><br><br>
                    <input type="text" id="dis" name="dis" value="{{response.dis}}" style="height: 40px;width: 10%;"><br>



                   <a href="/admin"><button class="add_product">Edit Product</button></a>



                </div>

                <div class="box_right">

                    <div class="inside_box">
                        <span class="material-symbols-outlined"
                            style="font-size: 100px; text-align: center;">file_upload</span>
                          

                         <img src="/product-images/{{response._id}}.jpg" alt="" style="width: 100px;height: auto;" id="imgview"> 
                        <input type="file" id="myFile" name="image" onchange="viewImage(event)">

                    </div>

                    <div class="upload_btn">
                        <label for="upload">upload image</label><br><br>

                    </div>
                </div>

            </form>
        </div> 

    </section>
    <!-- section ends -->



<script>

function viewImage(event){

    document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
}



</script>